@SET_MAKE@

# no csh please
SHELL = /bin/sh

SOURCES = vm-version.el $(wildcard *.el)

##############################################################################
# location of required programms
prefix = @prefix@
MKDIR = @MKDIR@
RM   = @RM@
LS   = @LS@
XARGS = @XARGS@
INSTALL = @INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_SCRIPT = @INSTALL_SCRIPT@
INSTALL_DATA = @INSTALL_DATA@

top_srcdir = @top_srcdir@
srcdir = @srcdir@
datadir= @datadir@/vm
datarootdir= @datarootdir@
lispdir = @lispdir@/pixmaps

EMACS_PROG = @EMACS_PROG@
EMACS_FLAVOR = @EMACS_FLAVOR@

FLAGS = @FLAGS@

SYMLINKS = @SYMLINKS@
LINKPATH = @LINKPATH@

##############################################################################

all:

Makefile: @srcdir@/Makefile.in
	cd @srcdir@/..; ./config.status

install: install-pkg

install-pkg: 
	$(MKDIR) -p $(lispdir)/mime
	@for i in `ls *.xpm` ; do                                      \
	    echo "Installing $$i in $(lispdir)" ;                      \
	    $(INSTALL_DATA) $$i $(lispdir) ;                           \
	done ;                                                         \
	for i in `ls mime/*.xpm` ; do                                  \
	    echo "Installing $$i in $(lispdir)" ;                      \
	    $(INSTALL_DATA) $$i $(lispdir)/mime ;                      \
	done ;                                                         
	@echo VM pixmaps successfully installed\!

##############################################################################
clean:
	-$(RM) -f *.info *.info-[0-9]

distclean: clean
	-$(RM) -f Makefile

